---
import { Icon } from 'astro-icon/components';
import Base from '../../layouts/Base.astro';
import Terminal from '../Terminal.astro';
import PhaseFlow from '../PhaseFlow.astro';
import HeroComparison from '../HeroComparison.astro';
import { useTranslations } from '../../i18n/utils';
import type { Lang } from '../../i18n/ui';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const langPrefix = lang === 'en' ? '' : `/${lang}`;

const products = [
  {
    name: 'govctl',
    role: t('product.govctl.role'),
    description: t('product.govctl.desc'),
    status: 'live' as const,
    href: `${langPrefix}/products/govctl`,
  },
  {
    name: 'skillc',
    role: t('product.skillc.role'),
    description: t('product.skillc.desc'),
    status: 'live' as const,
    href: `${langPrefix}/products/skillc`,
  },
  {
    name: 'jjgov',
    role: t('product.jjgov.role'),
    description: t('product.jjgov.desc'),
    status: 'soon' as const,
    href: `${langPrefix}/products/jjgov`,
  },
  {
    name: 'everevolve',
    role: t('product.everevolve.role'),
    description: t('product.everevolve.desc'),
    status: 'soon' as const,
    href: `${langPrefix}/products/everevolve`,
  },
];

const withoutGovctl = [
  t('comparison.without.1'),
  t('comparison.without.2'),
  t('comparison.without.3'),
  t('comparison.without.4'),
  t('comparison.without.5'),
];

const withGovctl = [
  t('comparison.with.1'),
  t('comparison.with.2'),
  t('comparison.with.3'),
  t('comparison.with.4'),
  t('comparison.with.5'),
];

const features = [
  {
    icon: 'heroicons:document-text',
    title: t('feature.rfc.title'),
    description: t('feature.rfc.desc'),
  },
  {
    icon: 'heroicons:clipboard-document-check',
    title: t('feature.gates.title'),
    description: t('feature.gates.desc'),
  },
  {
    icon: 'heroicons:bolt',
    title: t('feature.traceable.title'),
    description: t('feature.traceable.desc'),
  },
];
---

<Base title={`${t('home.title')} ${t('home.titleHighlight')}`} lang={lang}>
  <!-- Hero Section: Chaos vs Order Comparison Slider -->
  <HeroComparison lang={lang} />

  <!-- Section divider -->
  <div class="section-divider"></div>

  <!-- Phase Discipline Section -->
  <section id="phase" class="py-24 relative">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-16">
        <p class="text-sm font-medium text-[var(--color-primary)] mb-3 tracking-wide uppercase">{t('phase.label')}</p>
        <h2 class="text-3xl md:text-5xl font-bold text-[var(--color-text)] mb-6">
          {t('phase.title')}
        </h2>
        <p class="text-lg text-[var(--color-text-secondary)] max-w-xl mx-auto">
          {t('phase.subtitle')}
        </p>
      </div>

      <div class="flex justify-center mb-16">
        <PhaseFlow lang={lang} />
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        {features.map((feature) => (
          <div class="group text-center p-6 rounded-2xl border border-transparent hover:border-[var(--color-border)] hover:bg-[var(--color-surface)]/50 transition-all duration-300">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-[var(--color-primary)]/20 to-[var(--color-primary)]/5 flex items-center justify-center mx-auto mb-5 text-[var(--color-primary)] group-hover:scale-110 transition-transform duration-300">
              <Icon name={feature.icon} class="w-6 h-6" aria-hidden="true" />
            </div>
            <h3 class="font-semibold text-lg text-[var(--color-text)] mb-3">{feature.title}</h3>
            <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Section divider -->
  <div class="section-divider"></div>

  <!-- Products Section -->
  <section id="products" class="py-24 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-[var(--color-surface)] via-[var(--color-bg)] to-[var(--color-bg)]"></div>

    <div class="relative max-w-6xl mx-auto px-6">
      <div class="text-center mb-16">
        <p class="text-sm font-medium text-[var(--color-primary)] mb-3 tracking-wide uppercase">{t('products.label')}</p>
        <h2 class="text-3xl md:text-5xl font-bold text-[var(--color-text)] mb-6">
          {t('products.title')}
        </h2>
        <p class="text-lg text-[var(--color-text-secondary)] max-w-xl mx-auto">
          {t('products.subtitle')}
        </p>
      </div>

      <!-- Products with role badges -->
      <div class="products-container grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {products.map((product) => (
          <a
            href={product.href}
            class="group relative p-6 rounded-2xl border border-[var(--color-border)] bg-[var(--color-surface)]/50 hover:border-[var(--color-primary)]/50 hover:bg-[var(--color-surface)] transition-all duration-300 cursor-pointer"
          >
            <!-- Role badge -->
            <div class="absolute -top-3 left-6 px-3 py-1 rounded-full bg-[var(--color-primary)] text-white text-xs font-mono font-bold uppercase tracking-wider">
              {product.role}
            </div>

            <div class="flex items-start justify-between gap-4 mt-2">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <h3 class="text-xl font-bold text-[var(--color-text)] font-mono">{product.name}</h3>
                  {product.status === 'live' ? (
                    <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded-full text-xs font-medium bg-[var(--color-stable)]/10 text-[var(--color-stable)] border border-[var(--color-stable)]/20">
                      <span class="w-1.5 h-1.5 rounded-full bg-[var(--color-stable)] status-pulse"></span>
                      {t('status.live')}
                    </span>
                  ) : (
                    <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded-full text-xs font-medium bg-[var(--color-text-muted)]/10 text-[var(--color-text-muted)] border border-[var(--color-text-muted)]/20">
                      {t('status.soon')}
                    </span>
                  )}
                </div>
                <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">{product.description}</p>
              </div>
              <Icon name="heroicons:chevron-right" class="w-5 h-5 text-[var(--color-text-muted)] group-hover:text-[var(--color-primary)] transition-colors flex-shrink-0 mt-1" aria-hidden="true" />
            </div>

            <!-- Hover glow -->
            <div class="absolute -inset-px rounded-2xl bg-gradient-to-r from-[var(--color-primary)]/0 via-[var(--color-primary)]/5 to-[var(--color-primary)]/0 opacity-0 group-hover:opacity-100 transition-opacity -z-10"></div>
          </a>
        ))}
      </div>

      <!-- Product flow visualization -->
      <div class="mt-12 flex items-center justify-center gap-2 text-sm text-[var(--color-text-muted)]">
        <span class="font-mono">govctl</span>
        <Icon name="heroicons:chevron-right" class="w-4 h-4" aria-hidden="true" />
        <span class="font-mono">skillc</span>
        <Icon name="heroicons:chevron-right" class="w-4 h-4" aria-hidden="true" />
        <span class="font-mono text-[var(--color-text-muted)]/50">jjgov</span>
        <Icon name="heroicons:chevron-right" class="w-4 h-4 text-[var(--color-text-muted)]/50" aria-hidden="true" />
        <span class="font-mono text-[var(--color-text-muted)]/50">everevolve</span>
      </div>
    </div>
  </section>

  <!-- Problem Section (Timeline comparison) -->
  <section class="py-24 relative overflow-hidden">
    <div class="relative max-w-6xl mx-auto px-6">
      <div class="text-center mb-16">
        <p class="text-sm font-medium text-[var(--color-primary)] mb-3 tracking-wide uppercase">{t('problem.label')}</p>
        <h2 class="text-3xl md:text-5xl font-bold text-[var(--color-text)] mb-6">
          {t('problem.title')}<br class="hidden md:block" />
          <span class="text-[var(--color-text-muted)]">{t('problem.titleMuted')}</span>
        </h2>
        <p class="text-lg text-[var(--color-text-secondary)] max-w-xl mx-auto">
          {t('problem.subtitle')}
        </p>
      </div>

      <div class="comparison-container grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <!-- Without govctl (Chaos) -->
        <div class="comparison-without group relative p-8 rounded-2xl border-2 border-[var(--color-chaos)]/30 bg-gradient-to-b from-[var(--color-chaos)]/10 to-[var(--color-chaos)]/5 hover:border-[var(--color-chaos)]/50 transition-all duration-300 overflow-hidden">
          <div class="absolute inset-0 opacity-20">
            <div class="absolute top-4 left-4 w-2 h-2 rounded-full bg-[var(--color-chaos)] animate-ping"></div>
            <div class="absolute top-1/3 right-8 w-1.5 h-1.5 rounded-full bg-[var(--color-chaos)] animate-ping" style="animation-delay: 0.5s;"></div>
            <div class="absolute bottom-1/4 left-1/3 w-1 h-1 rounded-full bg-[var(--color-chaos)] animate-ping" style="animation-delay: 1s;"></div>
          </div>

          <div class="relative">
            <div class="flex items-center gap-4 mb-6">
              <div class="w-12 h-12 rounded-xl bg-[var(--color-chaos)]/20 border border-[var(--color-chaos)]/30 flex items-center justify-center">
                <Icon name="heroicons:exclamation-triangle" class="w-6 h-6 text-[var(--color-chaos)]" aria-hidden="true" />
              </div>
              <div>
                <h3 class="text-xl font-bold text-[var(--color-chaos)]">{t('problem.without')}</h3>
                <p class="text-sm text-[var(--color-chaos-muted)]">{t('problem.chaosTimeline')}</p>
              </div>
            </div>

            <ul class="space-y-4 font-mono text-sm">
              {withoutGovctl.map((line, i) => (
                <li class="flex items-start gap-3 text-[var(--color-text-muted)] leading-relaxed">
                  <span class="flex-shrink-0 w-5 h-5 rounded-full bg-[var(--color-chaos)]/20 flex items-center justify-center text-xs text-[var(--color-chaos)]">
                    {i + 1}
                  </span>
                  <span>{line}</span>
                </li>
              ))}
            </ul>

            <div class="mt-6 pt-4 border-t border-[var(--color-chaos)]/20">
              <div class="flex items-center gap-2 text-sm text-[var(--color-chaos)]">
                <Icon name="heroicons:x-mark" class="w-4 h-4" aria-hidden="true" />
                <span>{t('problem.resultChaos')}</span>
              </div>
            </div>
          </div>
        </div>

        <!-- With govctl (Order) -->
        <div class="comparison-with group relative p-8 rounded-2xl border-2 border-[var(--color-order)]/30 bg-gradient-to-b from-[var(--color-order)]/10 to-[var(--color-order)]/5 hover:border-[var(--color-order)]/50 transition-all duration-300 overflow-hidden shadow-[0_0_40px_var(--glow-order)]">
          <div class="relative">
            <div class="flex items-center gap-4 mb-6">
              <div class="w-12 h-12 rounded-xl bg-[var(--color-order)]/20 border border-[var(--color-order)]/30 flex items-center justify-center">
                <Icon name="heroicons:shield-check" class="w-6 h-6 text-[var(--color-order)]" aria-hidden="true" />
              </div>
              <div>
                <h3 class="text-xl font-bold text-[var(--color-order)]">{t('problem.with')}</h3>
                <p class="text-sm text-[var(--color-text-muted)]">{t('problem.orderTimeline')}</p>
              </div>
            </div>

            <ul class="space-y-4 font-mono text-sm">
              {withGovctl.map((line, i) => (
                <li class="flex items-start gap-3 text-[var(--color-text)] leading-relaxed">
                  <span class="flex-shrink-0 w-5 h-5 rounded-full bg-[var(--color-order)]/20 flex items-center justify-center text-xs text-[var(--color-order)]">
                    <Icon name="heroicons:check" class="w-3 h-3" aria-hidden="true" />
                  </span>
                  <span>{line}</span>
                </li>
              ))}
            </ul>

            <div class="mt-6 pt-4 border-t border-[var(--color-order)]/20">
              <div class="flex items-center gap-2 text-sm text-[var(--color-order)]">
                <Icon name="heroicons:check" class="w-4 h-4" aria-hidden="true" />
                <span>{t('problem.resultOrder')}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Terminal Showcase -->
  <section class="py-24 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-[var(--color-bg)] via-[var(--color-surface)]/30 to-[var(--color-bg)]"></div>

    <div class="relative max-w-4xl mx-auto px-6">
      <div class="text-center mb-12">
        <p class="text-sm font-medium text-[var(--color-primary)] mb-3 tracking-wide uppercase">{t('terminal.label')}</p>
        <h2 class="text-2xl md:text-3xl font-bold text-[var(--color-text)]">
          {t('terminal.title')}
        </h2>
      </div>

      <div class="space-y-6">
        <Terminal title="govctl" lines={[
          { prompt: true, text: 'govctl rfc new "Feature Spec"' },
          { text: '<span class="text-[var(--color-stable)]">✓</span> Created RFC-0001', dim: false },
          { prompt: true, text: 'govctl rfc advance RFC-0001 impl' },
          { text: '<span class="text-[var(--color-stable)]">✓</span> Advanced to <span class="text-[var(--color-impl)]">impl</span> phase', dim: false },
        ]} />
        <Terminal title="skillc" lines={[
          { prompt: true, text: 'skc init my-skill && skc lint' },
          { text: '<span class="text-[var(--color-stable)]">✓</span> Skill validated, 0 issues', dim: false },
          { prompt: true, text: 'skc build --target claude' },
          { text: '<span class="text-[var(--color-stable)]">✓</span> Deployed to ~/.claude/skills/', dim: false },
        ]} />
      </div>
    </div>
  </section>
</Base>

<script>
  import { animateComparison, animateProductCards, setupScrollAnimation } from '../../lib/animations';

  // Comparison section animation on scroll
  setupScrollAnimation('.comparison-container', animateComparison, 0.3);

  // Product cards animation on scroll
  setupScrollAnimation('.products-container', animateProductCards, 0.2);
</script>
