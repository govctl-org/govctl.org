---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl, getAlternateUrls } from '../i18n/utils';
import { type Lang } from '../i18n/ui';

interface Props {
  title: string;
  description?: string;
  lang?: Lang;
}

const url = Astro.url;
const lang = Astro.props.lang || getLangFromUrl(url);
const { title, description = 'Bringing determinism to AI coding' } = Astro.props;

const baseUrl = 'https://govctl.org';
const alternateUrls = getAlternateUrls(url, baseUrl);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | govctl</title>

    <!-- Alternate language links -->
    {alternateUrls.map(({ lang: altLang, url: altUrl }) => (
      <link rel="alternate" hreflang={altLang} href={altUrl} />
    ))}
    <link rel="alternate" hreflang="x-default" href={`${baseUrl}${url.pathname.replace(/^\/zh/, '') || '/'}`} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="govctl" />
    <meta property="og:image" content="/og-image.svg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content={lang === 'zh' ? 'zh_CN' : 'en_US'} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/og-image.svg" />
  </head>
  <body class="flex flex-col min-h-screen">
    <!-- Skip link for keyboard navigation -->
    <a href="#main-content" class="skip-link sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:px-4 focus:py-2 focus:bg-[var(--color-primary)] focus:text-white focus:rounded-lg focus:outline-none">
      Skip to main content
    </a>
    <Header lang={lang} />
    <main id="main-content" class="flex-1">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>
